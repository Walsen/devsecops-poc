# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=omnichannel
DB_USER=dbadmin
DB_PASSWORD=localdev123

# AWS (for local development with LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
KINESIS_STREAM_NAME=secure-api-events

# Authentication (Cognito)
# Set to false for local development without auth
AUTH_ENABLED=false
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-east-1

# OAuth Providers (store in AWS Secrets Manager for production)
# These are only needed if running auth locally without Cognito
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# LinkedIn: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Meta API (Facebook, Instagram, WhatsApp)
# Get these from Meta Developer Portal
META_ACCESS_TOKEN=
META_PHONE_NUMBER_ID=
META_PAGE_ID=
META_INSTAGRAM_ACCOUNT_ID=

# LinkedIn API
# Get these from LinkedIn Developer Portal
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_ORGANIZATION_ID=

# WhatsApp Community
WHATSAPP_COMMUNITY_ID=

# AI Agent (Bedrock)
# Enable AI agent for intelligent multi-channel posting
USE_AI_AGENT=false
# Available Claude models:
# - anthropic.claude-sonnet-4-5-20250929-v1:0 (Claude Sonnet 4.5 - recommended)
# - anthropic.claude-haiku-4-5-20251001-v1:0 (Claude Haiku 4.5 - faster/cheaper)
# - anthropic.claude-opus-4-5-20251101-v1:0 (Claude Opus 4.5 - most capable)
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-5-20250929-v1:0

# AWS SES (Email)
SES_SENDER_EMAIL=

# AWS SNS (SMS)
SNS_SENDER_ID=
