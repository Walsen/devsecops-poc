#!/usr/bin/env bash
# Pre-push hook: runs linting and tests before pushing
# Install: cp scripts/git-hooks/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push
# Or use: just install-hooks

set -e

echo "ğŸ” Running pre-push checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track failures
FAILED=0

# Function to run checks for a service
run_service_checks() {
    local service=$1
    local service_dir=$2
    
    echo -e "\n${YELLOW}â”â”â” Checking $service â”â”â”${NC}"
    
    # Check if directory exists
    if [ ! -d "$service_dir" ]; then
        echo -e "${RED}Directory $service_dir not found${NC}"
        return 1
    fi
    
    # Lint with ruff
    echo "  ğŸ“ Linting..."
    if uv run --directory "$service_dir" ruff check src/ 2>/dev/null; then
        echo -e "  ${GREEN}âœ“ Lint passed${NC}"
    else
        echo -e "  ${RED}âœ— Lint failed${NC}"
        FAILED=1
    fi
    
    # Type check with mypy (if configured)
    if [ -f "$service_dir/pyproject.toml" ] && grep -q "mypy" "$service_dir/pyproject.toml"; then
        echo "  ğŸ” Type checking..."
        if uv run --directory "$service_dir" --extra dev mypy src/ 2>/dev/null; then
            echo -e "  ${GREEN}âœ“ Type check passed${NC}"
        else
            echo -e "  ${YELLOW}âš  Type check had issues (non-blocking)${NC}"
        fi
    fi
    
    # Run tests
    if [ -d "$service_dir/tests" ]; then
        echo "  ğŸ§ª Running tests..."
        if uv run --directory "$service_dir" --extra dev pytest tests/ -q 2>/dev/null; then
            echo -e "  ${GREEN}âœ“ Tests passed${NC}"
        else
            echo -e "  ${RED}âœ— Tests failed${NC}"
            FAILED=1
        fi
    fi
}

# Run checks for each service
run_service_checks "API" "api"
run_service_checks "Worker" "worker"

# Check scheduler (no tests yet)
echo -e "\n${YELLOW}â”â”â” Checking Scheduler â”â”â”${NC}"
echo "  ğŸ“ Linting..."
if uv run --directory scheduler ruff check src/ 2>/dev/null; then
    echo -e "  ${GREEN}âœ“ Lint passed${NC}"
else
    echo -e "  ${RED}âœ— Lint failed${NC}"
    FAILED=1
fi

# Check infra CDK
echo -e "\n${YELLOW}â”â”â” Checking Infrastructure â”â”â”${NC}"
echo "  ğŸ“ Linting..."
if uv run --directory infra ruff check stacks/ 2>/dev/null; then
    echo -e "  ${GREEN}âœ“ Lint passed${NC}"
else
    echo -e "  ${RED}âœ— Lint failed${NC}"
    FAILED=1
fi

# CDK synth check
echo "  ğŸ—ï¸  CDK synth..."
if uv run --directory infra cdk synth --quiet 2>/dev/null; then
    echo -e "  ${GREEN}âœ“ CDK synth passed${NC}"
else
    echo -e "  ${RED}âœ— CDK synth failed${NC}"
    FAILED=1
fi

# Check frontend
echo -e "\n${YELLOW}â”â”â” Checking Frontend â”â”â”${NC}"
if [ -d "web" ] && [ -f "web/package.json" ]; then
    echo "  ğŸ“¦ Checking dependencies..."
    if [ ! -d "web/node_modules" ]; then
        echo "  Installing dependencies..."
        npm ci --prefix web --silent 2>/dev/null
    fi
    
    echo "  ğŸ§ª Running tests..."
    if npm test --prefix web 2>/dev/null; then
        echo -e "  ${GREEN}âœ“ Tests passed${NC}"
    else
        echo -e "  ${RED}âœ— Tests failed${NC}"
        FAILED=1
    fi
    
    echo "  ğŸ”¨ Building (TypeScript check)..."
    if npm run build --prefix web 2>/dev/null; then
        echo -e "  ${GREEN}âœ“ Frontend build passed${NC}"
    else
        echo -e "  ${RED}âœ— Frontend build failed${NC}"
        FAILED=1
    fi
else
    echo -e "  ${YELLOW}âš  Frontend not found, skipping${NC}"
fi

# Summary
echo -e "\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}âœ“ All pre-push checks passed!${NC}"
    exit 0
else
    echo -e "${RED}âœ— Pre-push checks failed. Fix issues before pushing.${NC}"
    exit 1
fi
